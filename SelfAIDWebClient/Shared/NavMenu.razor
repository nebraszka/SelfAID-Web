<CascadingAuthenticationState>
    <div class="top-row ps-3 navbar navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="">SelfAID</a>
            <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
    </div>

    <div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
        <nav class="flex-column">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    <span class="oi oi-home" aria-hidden="true"></span> Home
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="emocje">
                    <span class="oi oi-heart" aria-hidden="true"></span> Emocje
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="pytania">
                    <span class="oi oi-question-mark" aria-hidden="true"></span> Pytania
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <AuthorizeView>
                    <Authorized>
                        <NavLink class="nav-link" href="wpisy">
                            <span class="oi oi-document" aria-hidden="true"></span> Wpisy
                        </NavLink>
                    </Authorized>
                </AuthorizeView>
            </div>
        </nav>
    </div>
</CascadingAuthenticationState>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
