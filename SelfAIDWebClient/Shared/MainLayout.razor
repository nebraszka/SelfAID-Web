@inherits LayoutComponentBase

<PageTitle>SelfAID</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <AuthorizeView>
                <Authorized>
                    <p>Jesteś zalogowany jako @context.User.Identity.Name</p>
                </Authorized>
            </AuthorizeView>
            <image src="selfaidicon1.png" alt="Selfaid" class="logo" width="auto" height="45" />
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
